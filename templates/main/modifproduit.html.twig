{% extends 'base.html.twig' %}

{% block title %}MODIFIER PRODUIT{% endblock %}

{% form_theme formModifProduit 'bootstrap_4_Layout.html.twig' %}

{% block body %}

<div class="background">
	<h3>Formulaire modifier un produit</h3>

	{{ form_start(formModifProduit) }}

	{{ form_row(formModifProduit.nom,{'attr': {'placeholder': "Pull Sucepute"}}) }}
	{{ form_row(formModifProduit.description,{'attr': {'placeholder': "Pull de la marque d'Alkapote Sucepute 100% coton"}}) }}
	{{ form_row(formModifProduit.prix,{'attr': {'placeholder': "35"}}) }}
	{{ form_row(formModifProduit.id_categorie,{'attr': {'placeholder': "3"}}) }}

	<button type="submit" class="btn btn-sucess">Modifier Produit</button>

	{{ form_end(formModifProduit) }}

</div>
{% endblock %}